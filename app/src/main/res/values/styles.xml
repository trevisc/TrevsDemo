<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpacerHorizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_blue</item>
    </style>

    <style name="TextBlue">
        <item name="android:paddingLeft">7dp</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="TextBlue.10">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="TextBlue.12">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TextBlue.14">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextBlue.16">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextBlue.18">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
